<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <utils.components.MultiSpinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:entries="@array/district"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toEndOf="@+id/spinnerDays"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="HardcodedText,MissingConstraints" />

    <utils.components.MultiSpinner
        android:id="@+id/spinnerDays"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginStart="127dp"
        android:entries="@array/weekDays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinnerIntervals"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:drawSelectorOnTop="true"
        android:text="Day"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:text="@string/enter_a_course_detail"
        app:layout_constraintBottom_toTopOf="@+id/txtCourseUploadDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIntervals"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:drawSelectorOnTop="true"
        android:text="@string/district"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDistrict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtCourseUploadName"
        android:layout_width="392dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/enter_a_course_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <Switch
        android:id="@+id/swOnline"
        android:layout_width="121dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/online"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCourseUploadName"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/swOther"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:text="@string/other_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swHome"
        app:layout_constraintVertical_bias="0.016" />

    <Switch
        android:id="@+id/swHome"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:text="@string/trainer_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/swOnline"
        app:layout_constraintTop_toBottomOf="@+id/txtCourseUploadName"
        app:layout_constraintVertical_bias="0.03" />

    <Switch
        android:id="@+id/swStudent"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:text="@string/student_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swHome"
        app:layout_constraintTop_toBottomOf="@+id/txtCourseUploadName"
        app:layout_constraintVertical_bias="0.032" />

    <utils.components.MultiSpinner
        android:id="@+id/spinnerIntervals"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:entries="@array/timeInterval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="0.039"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:drawSelectorOnTop="true"
        android:text="@string/time_interval"
        app:layout_constraintBottom_toTopOf="@+id/spinnerIntervals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swOther"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtCourseUploadDetail"
        android:layout_width="395dp"
        android:layout_height="198dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDays"
        app:layout_constraintVertical_bias="0.311" />

    <EditText
        android:id="@+id/txtCourseUploadCost"
        android:layout_width="257dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="@string/enter_a_cost"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIntervals" />

    <Button
        android:id="@+id/btnCourseUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCourseUploadDetail"
        app:layout_constraintVertical_bias="0.066" />

</androidx.constraintlayout.widget.ConstraintLayout>